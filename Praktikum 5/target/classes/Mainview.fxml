<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="600" prefWidth="1000" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.example.praktikum5.MainController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <ListView fx:id="AccountListe" prefHeight="325.0" prefWidth="960.0">
        <contextMenu>
            <ContextMenu fx:id="cmList">
                <items>
                    <MenuItem onAction="#auswaehlen" text="Auswählen" />
                    <MenuItem onAction="#loeschen" text="Löschen" />
                </items>
            </ContextMenu>
        </contextMenu>
    </ListView>
    <Button onAction="#newAccount" text="new account" />
</VBox>
